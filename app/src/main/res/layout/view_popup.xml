<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/popup_view"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@id/popup_image"
        android:layout_width="@dimen/popup_image_size"
        android:layout_height="@dimen/popup_image_size"
        android:background="@drawable/shape_circle_white"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@id/popup_text"
        android:layout_width="@dimen/popup_text_size"
        android:layout_height="@dimen/popup_text_size"
        android:background="@drawable/shape_circle_red"
        android:layout_alignRight="@id/popup_image"
        android:layout_alignEnd="@id/popup_image"
        android:layout_alignTop="@id/popup_image"
        android:singleLine="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="9sp"
        android:textColor="@color/white"/>

</RelativeLayout>